<div class="form-container">
  <h2>Cadastro de Professor</h2>

  <form id="professorForm">
    <input type="hidden" id="schoolId" />

    <label>Nome completo</label>
    <input type="text" id="nome" required />

    <label>Disciplina</label>
    <input type="text" id="disciplina" required />

    <label>SÃ©ries que pode lecionar (ex: 6,7,8)</label>
    <input type="text" id="series" required />

    <label>E-mail</label>
    <input type="email" id="email" required />

    <label>WhatsApp</label>
    <input type="text" id="whatsapp" required />

    <button type="submit">Enviar</button>
  </form>
</div>

<script>
  const params = new URLSearchParams(window.location.search);
  const schoolId = params.get("schoolId");
  document.getElementById("schoolId").value = schoolId;

  document.getElementById("professorForm").addEventListener("submit", async function (e) {
    e.preventDefault();

    const data = {
      schoolId: schoolId,
      nome: nome.value,
      disciplina: disciplina.value,
      series: series.value,
      email: email.value,
      whatsapp: whatsapp.value
    };

    await fetch("URL_DO_SEU_WEBHOOK_AQUI", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(data)
    });

    alert("Cadastro enviado com sucesso!");
  });
</script>

</body>
